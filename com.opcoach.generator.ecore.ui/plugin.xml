<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Category for Data Sample Ecore generation"
            id="com.opcoach.generator.ecore.ui.commands.category"
            name="Data Sample Generation">
      </category>
      <command
            categoryId="com.opcoach.generator.ecore.ui.commands.category"
            id="com.opcoach.generator.ecore.ui.commands.ecore2dsgen"
            name="Generate dsgen Project">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.opcoach.generator.ecore.ui.commands.ecore2dsgen"
            class="com.opcoach.generator.ecore.ui.handlers.GenerateDataSampleHandler">
         <activeWhen>
            <reference
                  definitionId="com.opcoach.generator.ecore.ui.ecoreSelected">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="com.opcoach.generator.ecore.ui.ecoreSelected">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               icon="icons/datasample.png"
               id="com.opcoach.generator.ecore.ui.menu"
               label="Data Sample"
               tooltip="Access to all opcoach commands">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="com.opcoach.generator.ecore.ui.ecoreSelected">
               </reference>
            </visibleWhen>
            <separator
                  name="commands"
                  visible="false">
            </separator>
            <command
                  commandId="com.opcoach.generator.ecore.ui.commands.ecore2dsgen"
                  icon="icons/ecore2dsgen.png"
                  label="Genere Data Sample Project"
                  style="push"
                  tooltip="Generate a datasample project">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="com.opcoach.generator.ecore.ui.ecoreSelected">
                  </reference>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.opcoach.generator.ecore.ui.toolbar">
            <command
                  commandId="com.opcoach.generator.ecore.ui.commands.ecore2dsgen"
                  icon="icons/ecore2dsgen.png"
                  label="Generate DSGen Project"
                  style="push"
                  tooltip="Generate Data Sample Project">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.jdt.ui.PackageExplorer?after=additions">
         <menu
               icon="icons/datasample.png"
               id="com.opcoach.generator.ecore.ui.menu"
               label="Data Sample"
               tooltip="Access to all opcoach commands">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="com.opcoach.generator.ecore.ui.ecoreSelected">
               </reference>
            </visibleWhen>
            <separator
                  name="commands"
                  visible="false">
            </separator>
            <command
                  commandId="com.opcoach.generator.ecore.ui.commands.ecore2dsgen"
                  icon="icons/ecore2dsgen.png"
                  label="Genere Data Sample Project"
                  style="push"
                  tooltip="Generate a datasample project">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="com.opcoach.generator.ecore.ui.ecoreSelected">
                  </reference>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.opcoach.generator.ecore.ui.ecoreSelected">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <iterate
                  ifEmpty="false">
               <adapt
                     type="org.eclipse.core.resources.IFile">
                  <test
                        property="org.eclipse.core.resources.extension"
                        value="ecore">
                  </test>
               </adapt>
            </iterate>
         </with>
      </definition>
      <definition
            id="com.opcoach.generator.ecore.ui.dsgenSelected">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <iterate
                  ifEmpty="false">
               <adapt
                     type="org.eclipse.core.resources.IFile">
                  <test
                        property="org.eclipse.core.resources.name"
                        value="*.dsgen">
                  </test>
               </adapt>
            </iterate>
         </with>
      </definition>
      <definition
            id="com.opcoach.generator.ecore.ui.projectViewFocused">
         <with
               variable="activePartId">
            <equals
                  value="org.eclipse.ui.navigator.ProjectExplorer">
            </equals>
         </with>
      </definition>
   </extension>
   <extension
         name="Workflow Ant Taks"
         point="org.eclipse.ant.core.antTasks">
      <antTask
            class="com.opcoach.generator.ecore.ui.handlers.ant.WorkflowAntTask"
            eclipseRuntime="true"
            library="/"
            name="WorkflowAntTask">
      </antTask>
   </extension>

</plugin>
